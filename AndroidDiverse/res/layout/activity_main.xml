<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification 1"
        android:id="@+id/btnNot1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtInfo"
        android:layout_below="@+id/btnF3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:id="@+id/btnCalendar"
        android:layout_below="@+id/btnNot1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentOne"
        android:id="@+id/btnF1"
        android:layout_below="@+id/btnCalendar"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentTWO"
        android:id="@+id/btnF2"
        android:layout_alignTop="@+id/btnF1"
        android:layout_toEndOf="@+id/btnF1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentThree"
        android:id="@+id/btnF3"
        android:layout_below="@+id/btnF1"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentFour"
        android:id="@+id/btnF4"
        android:layout_below="@+id/btnF2"
        android:layout_toEndOf="@+id/btnF3" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtInfo"
        android:id="@+id/fragment_holder"></RelativeLayout>

</RelativeLayout>
